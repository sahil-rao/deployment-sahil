{
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_description": "Packer generated AMI",
            "access_key": "",
            "secret_key": "",
            "region": "us-west-2",
            "source_ami": "ami-704ab610",
            "instance_type": "r3.2xlarge",
            "ssh_username": "ubuntu",
            "ami_name": "dbsilo-redis {{timestamp}}",
            "ami_regions": [
                "us-west-2"
            ],
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/xvdf",
                    "encrypted": true,
                    "volume_size": 60,
                    "volume_type": "io1",
                    "iops": 1000,
                    "delete_on_termination": false
                }
            ],
            "tags": {
                "Name": "dbsilo-redis"
            }
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../executables",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "executables",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "etc",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "../scripts/setup_ubuntu.sh",
            "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
        },
        {
            "type": "shell",
            "script": "../scripts/setup_volume.sh",
            "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }} /dev/xvdf /var/lib/redis"
        },
        {
            "type": "shell",
            "script": "setup_redis.sh",
            "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
        },
        {
            "type": "shell",
            "script": "../scripts/setup_datadog.sh",
            "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
        }
    ]
}
