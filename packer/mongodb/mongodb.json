{
    "variables": {
	"aws_access_key": "",
	"aws_secret_key": ""
    },
    "builders": [
	{
	    "type": "amazon-ebs",
	    "access_key": "{{user `aws_access_key`}}",
	    "secret_key": "{{user `aws_secret_key`}}",
	    "region": "us-west-1",
	    "source_ami": "ami-06116566",
	    "instance_type": "m4.xlarge",
	    "ssh_username": "ubuntu",
	    "ami_name": "prithvi-mongodb-test {{timestamp}}"
	}
    ],
    "provisioners": [
	{
	    "type": "file",
	    "source": "executables",
	    "destination": "/tmp"
	},
	{
	    "type": "file",
	    "source": "etc",
	    "destination": "/tmp"
	},
	{
	    "type": "shell",
	    "script": "setup_mongodb.sh",
	    "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
	}
    ]
}
