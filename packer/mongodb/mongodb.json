{
    "builders": [
        {
            "access_key": "",
            "secret_key": "",
            "type": "amazon-ebs",
            "region": "us-west-1",
            "source_ami": "ami-06116566",
            "instance_type": "m4.xlarge",
            "ssh_username": "ubuntu",
            "ami_name": "erickt-mongodb-test {{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "executables",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "etc",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "setup_mongodb.sh",
            "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
        }
    ]
}
