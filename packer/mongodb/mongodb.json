{
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_description": "Packer generated AMI",
            "ami_name": "{{ user `name` }}-{{ timestamp }}",
            "access_key": "",
            "secret_key": "",
            "region": "us-west-1",
            "source_ami": "ami-06116566",
            "instance_type": "m4.xlarge",
            "ssh_username": "ubuntu",
            "ami_name": "dbsilo-mongodb {{timestamp}}",
            "ami_regions": [
                "us-west-1",
                "us-west-2"
            ],
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/xvdf",
                    "encrypted": true,
                    "volume_size": 256,
                    "volume_type": "io1",
                    "iops": 1000,
                    "delete_on_termination": false
                }
            ],
            "tags": {
                "Service": "mongodb"
            }
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "executables",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "etc",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "setup_mongodb.sh",
            "execute_command": "sudo chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
        }
    ]
}
